<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Main CSS-->
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="~/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/loading.css">
    <link rel="stylesheet" href="~/message-box/toastr.min.css"/>
    <link rel="stylesheet" href="~/css/loading.css" />
    <title>Đăng nhập - Admin Picture Engineer</title>
</head>
<body>
    <section class="material-half-bg">
        <div class="cover"></div>
    </section>
    <section class="login-content">
        <div class="logo">
            <h1>Quản lý Picture Engineer</h1>
        </div>
        @RenderBody()
    </section>
    <!-- loader -->
    <div id="ftco-loader" class="show fullscreen" aria-hidden="true">
        <svg class="circular" width="48px" height="48px">
            <circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" />
            <circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" />
        </svg>
    </div>
    <!-- Essential javascripts for application to work-->
    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/message-box/toastr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/additional-methods.js"></script>
    <script type="text/javascript" src="~/js/required.js"></script>
    @RenderSection("login", false)
</body>
</html>