<div class="modal fade" id="modal-add" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" style="width:100%; margin: 0 auto;">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Thêm mới bài viết
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="form-add" class="form-input" onsubmit="return false">
                <div class="modal-body">
                    <div class="d-flex">
                        <div class="form-group" style="width: 49%; margin-right: 1%">
                            <label>Meta</label>
                            <input type="text" class="form-control" placeholder="Meta" name="meta" data-key="MetaTitle" />
                        </div>
                        <div class="form-group" style="width: 50%">
                            <label>Tiêu đề</label>
                            <input type="text" class="form-control" placeholder="Tiêu đề" name="title" data-key="Title" />
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="form-group" style="width: 49%; margin-right: 1%">
                            <label>Mô tả</label>
                            <input type="text" class="form-control" placeholder="Mô tả" name="description" data-key="Description" />
                        </div>
                        <div class="form-group" style="width: 50%">
                            <label>Dịch vụ</label>
                            <select class="form-control" name="service" data-key="ServiceId">
                                @foreach(var item in (List<PictureEngineer.Data.Entities.Services>)ViewData["Service"])
                                { 
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3">Chọn ảnh</label>
                        <input type="file" class="form-control" name="file" data-key="FileUpload" />
                    </div>
                    <div class="form-group">
                        <label>Nội dung</label>
                        <input style="height: 300px" class="form-control" placeholder="Nội dung" name="content" data-key="Contents" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" name="exit" data-dismiss="modal">
                        <i class="fa fa-fw fa-lg fa-times-circle"></i>Thoát
                    </button>
                    &nbsp;&nbsp;
                    <button type="submit" class="btn btn-primary" id="btn-add" name="add"><i class="fa fa-plus"></i>Thêm mới</button>
                </div>
            </form>
        </div>
    </div>
</div>